{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "dadezzz"
  ],
  "extends": [
    ":semanticCommits",
    "config:best-practices",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    "customManagers:biomeVersions"
  ],
  "ignorePaths": [
    "**/.*/**"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/.unmaintained/kubernetes/.+\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "automerge": true,
      "matchFileNames": [
        ".devcontainer/**",
        ".github/workflows/**",
        ".woodpecker/**"
      ]
    },
    {
      "groupName": "immich monorepo",
      "groupSlug": "immich-monorepo",
      "matchPackageNames": [
        "ghcr.io/immich-app/*"
      ]
    },
    {
      "groupName": "woodpecker monorepo",
      "groupSlug": "woodpecker-monorepo",
      "matchPackageNames": [
        "docker.io/woodpeckerci/*"
      ]
    },
    {
      "matchPackageNames": [
        "quay.io/minio/minio"
      ],
      "versioning": "regex:^RELEASE\\.(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})T(?<build>\\d{2})-(?<revision>\\d{2})-\\d{2}Z(?:-(?<compatibility>.+))?$"
    }
  ]
}
