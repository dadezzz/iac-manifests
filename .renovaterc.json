{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "dvdzara"
  ],
  "extends": [
    ":semanticCommits",
    "config:best-practices",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    "customManagers:biomeVersions"
  ],
  "ignorePaths": [
    ".unmaintained/**",
    "docker-compose/.*/**"
  ],
  "kubernetes": {
    "fileMatch": [
      "kubernetes/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "automerge": true,
      "matchFileNames": [
        ".github/workflows/**",
        ".devcontainer/**"
      ]
    },
    {
      "matchPackageNames": [
        "ghcr.io/immich-app/*"
      ],
      "groupSlug": "immich",
      "groupName": "immich"
    },
    {
      "matchPackageNames": [
        "docker.io/woodpeckerci/*"
      ],
      "groupSlug": "woodpecker",
      "groupName": "woodpecker"
    },
    {
      "versioning": "regex:^RELEASE\\.(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})T(?<build>\\d{2})-(?<revision>\\d{2})-\\d{2}Z(?:-(?<compatibility>.+))?$",
      "matchPackageNames": [
        "/quay.io/minio/minio/"
      ]
    }
  ]
}
