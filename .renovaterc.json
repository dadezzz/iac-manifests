{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": ["dadezzz"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update dependency versions specified as environment variables",
      "fileMatch": ["(^|/)(?:docker-)?compose[^/]*\\.ya?ml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-zA-Z0-9-._]+?) depName=(?<depName>[^\\s]+?)(?: (?:lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?\\s+[A-Za-z0-9_]+?_VERSION\\s*:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    }
  ],
  "extends": [
    ":semanticCommits",
    "config:best-practices",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    "customManagers:biomeVersions"
  ],
  "ignorePaths": ["**/.*/**"],
  "kubernetes": {
    "fileMatch": [".unmaintained/kubernetes/.+\\.yaml$"]
  },
  "packageRules": [
    {
      "automerge": true,
      "matchFileNames": [
        ".devcontainer/**",
        ".github/workflows/**",
        ".woodpecker/**"
      ]
    },
    {
      "groupName": "immich monorepo",
      "groupSlug": "immich-monorepo",
      "matchPackageNames": ["ghcr.io/immich-app/*"]
    },
    {
      "groupName": "woodpecker monorepo",
      "groupSlug": "woodpecker-monorepo",
      "matchPackageNames": ["docker.io/woodpeckerci/*"]
    },
    {
      "description": "Detect version changes using minio's custom scheme",
      "matchPackageNames": ["quay.io/minio/minio"],
      "versioning": "regex:^RELEASE\\.(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})T(?<build>\\d{2})-(?<revision>\\d{2})-\\d{2}Z(?:-(?<compatibility>.+))?$"
    }
  ]
}
