{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": ["dadezzz"],
  "extends": [
    ":semanticCommits",
    "config:best-practices",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    "customManagers:biomeVersions"
  ],
  "ignorePaths": ["**/.unmaintained/**"],
  "kubernetes": {
    "managerFilePatterns": ["/kubernetes/.+\\.yaml$/"]
  },
  "packageRules": [
    {
      "automerge": true,
      "matchFileNames": [
        ".devcontainer/**",
        ".github/workflows/**",
        ".woodpecker/**"
      ]
    },
    {
      "automerge": true,
      "matchPackageNames": ["@biomejs/biome"]
    },
    {
      "groupName": "immich monorepo",
      "groupSlug": "immich-monorepo",
      "matchPackageNames": ["ghcr.io/immich-app/immich-*"]
    },
    {
      "groupName": "woodpecker monorepo",
      "groupSlug": "woodpecker-monorepo",
      "matchPackageNames": ["docker.io/woodpeckerci/*"]
    }
  ]
}
