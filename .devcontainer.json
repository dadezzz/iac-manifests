{
  "name": "docker-compose-manifests",
  "image": "docker.io/ovensh/bun:1.1.33-slim",
  "customizations": {
    "vscode": {
      "extensions": [
        "DavidAnson.vscode-markdownlint",
        "esbenp.prettier-vscode",
        "redhat.vscode-yaml"
      ]
    }
  },
  "postCreateCommand": {
    "install packages": "apt-get update && apt-get install --no-install-recommends -y  ca-certificates git gpg"
  },
  "postStartCommand": {
    "set git editor": "git config --global core.editor code",
    "set git safe directory": "git config --global --add safe.directory /workspaces/unitn-ice-notes"
  }
}
